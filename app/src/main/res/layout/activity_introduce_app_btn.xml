<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".Guide.IntroduceAppBtn">

    <FrameLayout
        android:id="@+id/frameLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="#2D0F51"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" >

        <TextView
            android:id="@+id/codinavi"
            android:layout_width="wrap_content"
            android:layout_height="53dp"
            android:fontFamily="@font/bakbakone_regular"
            android:importantForAccessibility="no"
            android:layout_gravity="center"
            android:text="CODINAVI"
            android:textColor="#FFFFFF"
            android:textSize="35dp" />

        <ImageButton
            android:id="@+id/back_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginRight="170dp"
            android:background="@drawable/back_btn"
            android:contentDescription="뒤로가기" />

    </FrameLayout>

    <View
        android:id="@+id/introduceAppback"
        android:layout_width="330dp"
        android:layout_height="530dp"
        android:background="@drawable/rectangle_1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/frameLayout"
        app:layout_constraintBottom_toTopOf="@+id/menuBottomNav" />

    <TextView
        android:id="@+id/introduceAppTv1"
        android:layout_width="291dp"
        android:layout_height="wrap_content"
        android:text="앱 소개"
        android:fontFamily="@font/soyo_maple_regular"
        android:textColor="@color/black"
        android:textSize="22dp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/introduceAppback"
        app:layout_constraintBottom_toTopOf="@+id/introduceAppTv2"/>

    <TextView
        android:id="@+id/introduceAppTv2"
        android:layout_width="291dp"
        android:layout_height="wrap_content"
        android:text="총 2페이지 중 1페이지"
        android:fontFamily="@font/soyo_maple_regular"
        android:textColor="@color/black"
        android:textSize="15dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/introduceAppTv1"
        app:layout_constraintBottom_toTopOf="@+id/introduceAppTv3"/>

    <TextView
        android:id="@+id/introduceAppTv3"
        android:layout_width="291dp"
        android:layout_height="wrap_content"
        android:text="코디나비는 시각장애인을 위한 코디 추천 서비스 어플입니다."
        android:fontFamily="@font/soyo_maple_regular"
        android:textColor="@color/black"
        android:lineSpacingExtra="10dp"
        android:textSize="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/introduceAppTv2"
        app:layout_constraintBottom_toBottomOf="@+id/introduceAppTv4"/>

    <TextView
        android:id="@+id/introduceAppTv4"
        android:layout_width="291dp"
        android:layout_height="wrap_content"
        android:text="카메라를 통해 옷의 정보를 제공하고 그에 맞는 코디를 추천해주며 날씨에 맞는 옷차림을 소개해줍니다."
        android:fontFamily="@font/soyo_maple_regular"
        android:textColor="@color/black"
        android:lineSpacingExtra="10dp"
        android:textSize="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/introduceAppTv3"
        app:layout_constraintBottom_toTopOf="@+id/introduceAppTv5"/>

    <TextView
        android:id="@+id/introduceAppTv5"
        android:layout_width="291dp"
        android:layout_height="wrap_content"
        android:text="본 앱은 한국패션산업연구원이 검수한 데이터를 활용하여 정확한 옷 인식 및 자연스러운 코디 추천을 제공합니다."
        android:fontFamily="@font/soyo_maple_regular"
        android:textColor="@color/black"
        android:lineSpacingExtra="10dp"
        android:textSize="17dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/introduceAppTv4"
        app:layout_constraintBottom_toBottomOf="@+id/introduceAppback"/>

    <ImageButton
        android:id="@+id/next_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:background="@drawable/next_btn"
        app:layout_constraintEnd_toEndOf="@+id/introduceAppback"
        app:layout_constraintTop_toBottomOf="@id/introduceAppTv5"
        app:layout_constraintBottom_toBottomOf="@+id/introduceAppback"
        android:contentDescription="다음 페이지로 이동, 버튼" />

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/menuBottomNav"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rectangle_3"
        app:itemActiveIndicatorStyle="@android:color/transparent"
        app:itemIconSize="90dp"
        app:itemIconTint="@color/white"
        app:labelVisibilityMode="unlabeled"
        app:layout_constraintBottom_toBottomOf="parent"
        app:menu="@menu/menu_bottom" />

</androidx.constraintlayout.widget.ConstraintLayout>