<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:orientation="vertical"
    tools:context=".IntroduceWeatherBtn">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rectangle_3"
            android:orientation="horizontal" >

            <ImageButton
                android:id="@+id/homeBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/home"
                android:contentDescription="홈"
                android:background="@android:color/transparent"/>

            <TextView
                android:id="@+id/codinavi"
                android:layout_width="158dp"
                android:layout_height="53dp"
                android:layout_weight="1"
                android:layout_marginTop="19dp"
                android:gravity="center"
                android:importantForAccessibility="no"
                android:text="CODINAVI"
                android:textColor="#2D0F51"
                android:textSize="35sp"
                android:fontFamily="@font/bakbakone_regular" />

            <ImageButton
                android:id="@+id/profileBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/profile"
                android:contentDescription="마이페이지"
                android:background="@android:color/transparent" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">

            <View
                android:id="@+id/introduceWeatherV"
                android:layout_width="328dp"
                android:layout_height="322dp"
                android:background="@drawable/rectangle_1"
                android:layout_marginTop="40dp" />

            <TextView
                android:id="@+id/introduceWeatherTv"
                android:layout_width="291dp"
                android:layout_height="285dp"
                android:layout_marginStart="18dp"
                android:layout_marginTop="55dp"
                android:fontFamily="@font/soyo_maple_regular"
                android:gravity="center_vertical"
                android:lineSpacingExtra="10dp"
                android:text="사용자의 현재 위치를 기반으로 날씨 정보를 제공하고, 날씨에 맞은 옷차림을 추천합니다.\n\n또한, 사용자가 원하는 지역을 입력하여 다른 지역의 날씨와 그에 따른 옷차림을 추천받을 수 있습니다."
                android:textSize="22sp" />
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>