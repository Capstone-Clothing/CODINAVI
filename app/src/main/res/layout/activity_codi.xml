<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/background"
    tools:context=".CodiActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rectangle_3"
            android:orientation="horizontal" >

            <ImageButton
                android:id="@+id/homeBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/home"
                android:contentDescription="홈"
                android:background="@android:color/transparent"/>

            <TextView
                android:id="@+id/codinavi"
                android:layout_width="158dp"
                android:layout_height="53dp"
                android:layout_weight="1"
                android:layout_marginTop="19dp"
                android:gravity="center"
                android:importantForAccessibility="no"
                android:text="CODINAVI"
                android:textColor="#2D0F51"
                android:textSize="35sp"
                android:fontFamily="@font/bakbakone_regular" />

            <ImageButton
                android:id="@+id/profileBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/profile"
                android:contentDescription="마이페이지"
                android:background="@android:color/transparent" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center">
            <View
                android:layout_width="330dp"
                android:layout_height="400dp"
                android:layout_marginTop="50dp"
                android:layout_gravity="center"
                android:background="@drawable/rectangle_1" />

            <TextView
                android:id="@+id/codiTv"
                android:layout_width="330dp"
                android:layout_height="400dp"
                android:layout_marginTop="50dp"
                android:fontFamily="@font/soyo_maple_regular"
                android:gravity="center_vertical"
                android:lineSpacingExtra="10dp"
                android:textColor="@color/black"
                android:text="맑고 시원한 하늘색 셔츠와 어울리는 코디를 추천해드립니다. \n "
                android:textSize="22sp" />
        </RelativeLayout>

        <android.widget.Button
            android:id="@+id/confirmBtn"
            android:layout_width="330dp"
            android:layout_height="90dp"
            android:layout_marginTop="45dp"
            android:layout_gravity="center"
            android:text="확인하기"
            android:textSize="40sp"
            android:textColor="@color/white"
            android:fontFamily="@font/soyo_maple_regular"
            android:textStyle="bold"
            android:background="@drawable/mainbtn" />
    </LinearLayout>
</LinearLayout>