<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".Weather.WeatherActivity">

    <FrameLayout
        android:id="@+id/frameLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="#2D0F51"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" >

        <TextView
            android:id="@+id/codinavi"
            android:layout_width="wrap_content"
            android:layout_height="53dp"
            android:fontFamily="@font/bakbakone_regular"
            android:importantForAccessibility="no"
            android:layout_gravity="center"
            android:text="CODINAVI"
            android:textColor="#FFFFFF"
            android:textSize="35dp" />

        <ImageButton
            android:id="@+id/back_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginRight="170dp"
            android:background="@drawable/back_btn"
            android:contentDescription="뒤로가기" />

    </FrameLayout>

    <ScrollView
        android:id="@+id/scrollWeather"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@+id/frameLayout"
        app:layout_constraintBottom_toTopOf="@+id/menuBottomNav"
        android:scrollbars="none" >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <View
                android:id="@+id/weatherback"
                android:layout_width="330dp"
                android:layout_height="350dp"
                android:layout_marginTop="30dp"
                android:background="@drawable/rectangle_1"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                tools:ignore="MissingConstraints" />

            <!-- 위치 아이콘 -->
            <ImageView
                android:id="@+id/placeIv"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/place_marker"
                android:layout_marginLeft="20dp"
                app:layout_constraintStart_toStartOf="@+id/weatherback"
                app:layout_constraintTop_toTopOf="@+id/currentLocationTv"
                app:layout_constraintBottom_toBottomOf="@+id/currentLocationTv" />

            <!-- 현재 위치 -->
            <TextView
                android:id="@+id/currentLocationTv"
                android:layout_width="290dp"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@color/black"
                android:textSize="22dp"
                android:gravity="center"
                app:layout_constraintStart_toStartOf="@+id/weatherback"
                app:layout_constraintEnd_toEndOf="@+id/weatherback"
                app:layout_constraintTop_toTopOf="@+id/weatherback"
                app:layout_constraintBottom_toTopOf="@+id/currentWeatherTv" />

            <!-- 날씨 아이콘 -->
            <ImageView
                android:id="@+id/weatherIV"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_marginLeft="30dp"
                app:layout_constraintStart_toStartOf="@+id/placeIv"
                app:layout_constraintTop_toTopOf="@+id/currentWeatherTv"
                app:layout_constraintBottom_toBottomOf="@+id/temperatureTv"
                />

            <!-- 날씨 -->
            <TextView
                android:id="@+id/currentWeatherTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@color/black"
                android:textSize="20dp"
                app:layout_constraintStart_toStartOf="@+id/weatherback"
                app:layout_constraintEnd_toEndOf="@+id/weatherback"
                app:layout_constraintTop_toBottomOf="@+id/currentLocationTv"
                app:layout_constraintBottom_toTopOf="@+id/temperatureTv"
                app:layout_constraintHorizontal_bias="0.7"/>

            <!-- 기온 -->
            <TextView
                android:id="@+id/temperatureTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@color/black"
                android:textSize="20dp"
                app:layout_constraintStart_toStartOf="@+id/currentWeatherTv"
                app:layout_constraintTop_toBottomOf="@+id/currentWeatherTv"
                app:layout_constraintBottom_toTopOf="@+id/highLowTempTv"
                app:layout_constraintHorizontal_bias="0.8" />

            <!-- 최고/최저 기온 -->
            <TextView
                android:id="@+id/highLowTempTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@color/black"
                android:textSize="20dp"
                android:gravity="center"
                app:layout_constraintStart_toStartOf="@+id/weatherback"
                app:layout_constraintEnd_toEndOf="@+id/weatherback"
                app:layout_constraintTop_toBottomOf="@+id/temperatureTv"
                app:layout_constraintBottom_toTopOf="@+id/weatherSummaryTv"
                />

            <!-- 한 줄평 -->
            <TextView
                android:id="@+id/weatherSummaryTv"
                android:layout_width="290dp"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@color/black"
                android:textSize="18dp"
                android:lineSpacingExtra="10dp"
                android:gravity="center"
                app:layout_constraintStart_toStartOf="@+id/weatherback"
                app:layout_constraintEnd_toEndOf="@+id/weatherback"
                app:layout_constraintTop_toBottomOf="@+id/highLowTempTv"
                app:layout_constraintBottom_toBottomOf="@+id/weatherback"
                />

            <!-- 옷차림 추천 text -->
            <TextView
                android:id="@+id/recommendClothTv"
                android:layout_width="290dp"
                android:layout_height="wrap_content"
                android:lineSpacingExtra="10dp"
                android:layout_marginTop="30dp"
                android:text=""
                android:textColor="@color/black"
                android:textSize="20dp"
                android:gravity="center"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/weatherback"/>

            <!-- 추천 아이템 text -->
            <TextView
                android:id="@+id/recommendItemTv"
                android:layout_width="290dp"
                android:layout_height="wrap_content"
                android:lineSpacingExtra="10dp"
                android:layout_marginTop="30dp"
                android:text=""
                android:textColor="@color/black"
                android:textSize="20dp"
                android:gravity="center"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/recommendClothTv" />

            <!-- 시간별 날씨 버튼 -->
            <android.widget.Button
                android:id="@+id/hourlyWeatherBtn"
                android:layout_width="130dp"
                android:layout_height="100dp"
                android:text="시간별\n조회"
                android:textColor="@color/white"
                android:fontFamily="@font/soyo_maple_regular"
                android:textStyle="bold"
                android:layout_marginTop="30dp"
                android:textSize="30dp"
                android:lineSpacingExtra="10dp"
                android:layout_marginLeft="20dp"
                android:background="@drawable/mainbtn"
                app:layout_constraintTop_toBottomOf="@+id/recommendItemTv"
                app:layout_constraintRight_toLeftOf="@+id/vertical_centerline"
                app:layout_constraintLeft_toLeftOf="parent" />

            <!-- 지역 변경 버튼 -->
            <android.widget.Button
                android:id="@+id/searchOtherLocationBtn"
                android:layout_width="130dp"
                android:layout_height="100dp"
                android:text="지역\n변경"
                android:textColor="@color/white"
                android:fontFamily="@font/soyo_maple_regular"
                android:textStyle="bold"
                android:layout_marginTop="30dp"
                android:textSize="30dp"
                android:lineSpacingExtra="10dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/mainbtn"
                app:layout_constraintTop_toBottomOf="@+id/recommendItemTv"
                app:layout_constraintLeft_toRightOf="@+id/vertical_centerline"
                app:layout_constraintRight_toRightOf="parent" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/vertical_centerline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent=".50" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/menuBottomNav"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rectangle_3"
        app:itemActiveIndicatorStyle="@android:color/transparent"
        app:itemIconSize="90dp"
        app:itemIconTint="@color/white"
        app:labelVisibilityMode="unlabeled"
        app:layout_constraintBottom_toBottomOf="parent"
        app:menu="@menu/menu_bottom" />

</androidx.constraintlayout.widget.ConstraintLayout>