<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/background"
    tools:context=".UserActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rectangle_3"
            android:orientation="horizontal" >

            <ImageButton
                android:id="@+id/homeBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/home"
                android:contentDescription="홈"
                android:background="@android:color/transparent"/>

            <TextView
                android:id="@+id/codinavi"
                android:layout_width="158dp"
                android:layout_height="53dp"
                android:layout_weight="1"
                android:layout_marginTop="19dp"
                android:gravity="center"
                android:importantForAccessibility="no"
                android:text="CODINAVI"
                android:textColor="#2D0F51"
                android:textSize="35sp"
                android:fontFamily="@font/bakbakone_regular" />

            <ImageButton
                android:id="@+id/profileBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/profile"
                android:contentDescription="마이페이지"
                android:background="@android:color/transparent" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/username"
                android:layout_width="136dp"
                android:layout_height="68dp"
                android:gravity="center|bottom"
                android:text="User"
                android:textColor="@color/black"
                android:textSize="45sp"
                android:fontFamily="@font/soyo_maple_bold" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@drawable/rectangle_2"
            android:gravity="center|bottom"
            android:layout_gravity="center"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">

                <android.widget.Button
                    android:id="@+id/genderBtn"
                    android:layout_width="270dp"
                    android:layout_height="90dp"
                    android:background="@drawable/userbtn"
                    android:fontFamily="@font/soyo_maple_regular"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:text="성별"
                    android:textColor="@color/white"
                    android:textSize="45sp" />

                <android.widget.Button
                    android:id="@+id/guideBtn"
                    android:layout_width="270dp"
                    android:layout_height="90dp"
                    android:layout_marginTop="30dp"
                    android:background="@drawable/userbtn"
                    android:fontFamily="@font/soyo_maple_regular"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:text="사용설명서"
                    android:textColor="@color/white"
                    android:textSize="45sp" />

                <android.widget.Button
                    android:id="@+id/administratorBtn"
                    android:layout_width="270dp"
                    android:layout_height="90dp"
                    android:layout_marginTop="30dp"
                    android:background="@drawable/userbtn"
                    android:fontFamily="@font/soyo_maple_regular"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:text="관리자 문의"
                    android:textColor="@color/white"
                    android:textSize="45sp" />

                <android.widget.Button
                    android:id="@+id/logoutBtn"
                    android:layout_width="270dp"
                    android:layout_height="90dp"
                    android:layout_marginTop="30dp"
                    android:background="@drawable/userbtn"
                    android:fontFamily="@font/soyo_maple_regular"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:text="로그아웃"
                    android:textColor="@color/white"
                    android:textSize="45sp" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>