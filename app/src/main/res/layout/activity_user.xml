<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/background"
    tools:context=".UserActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="16dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rectangle_3"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/homeBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/home"
                android:background="@android:color/transparent"/>

            <TextView
                android:id="@+id/textView"
                android:layout_width="158dp"
                android:layout_height="53dp"
                android:layout_weight="1"
                android:layout_marginTop="19dp"
                android:gravity="center"
                android:text="CODINAVI"
                android:textColor="#2D0F51"
                android:textSize="35sp"
                android:fontFamily="@font/bakbakone_regular" />

            <ImageButton
                android:id="@+id/profileBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/profile"
                android:background="@android:color/transparent" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="136dp"
                android:layout_height="68dp"
                android:layout_marginLeft="10dp"
                android:gravity="center|bottom"
                android:text="User"
                android:textColor="@color/black"
                android:textSize="45sp"
                android:fontFamily="@font/bakbakone_regular" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="328dp"
            android:layout_height="535dp"
            android:layout_marginLeft="25dp"
            android:background="@drawable/rectangle_2"
            android:gravity="center"
            android:orientation="vertical">

            <Button
                android:id="@+id/genderBtn"
                android:layout_width="270dp"
                android:layout_height="90dp"
                android:background="@drawable/userbtn"
                android:fontFamily="@font/locus_sangsang"
                android:gravity="center"
                android:text="성별"
                android:textColor="#FFFFFF"
                android:textSize="45sp" />

            <Button
                android:id="@+id/guideBtn"
                android:layout_width="270dp"
                android:layout_height="90dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/userbtn"
                android:fontFamily="@font/locus_sangsang"
                android:gravity="center"
                android:text="사용설명서"
                android:textColor="#FFFFFF"
                android:textSize="45sp" />

            <Button
                android:id="@+id/administratorBtn"
                android:layout_width="270dp"
                android:layout_height="90dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/userbtn"
                android:fontFamily="@font/locus_sangsang"
                android:gravity="center"
                android:text="관리자 문의"
                android:textColor="#FFFFFF"
                android:textSize="45sp" />

            <Button
                android:id="@+id/logoutBtn"
                android:layout_width="270dp"
                android:layout_height="90dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/userbtn"
                android:fontFamily="@font/locus_sangsang"
                android:gravity="center"
                android:text="로그아웃"
                android:textColor="#FFFFFF"
                android:textSize="45sp" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>