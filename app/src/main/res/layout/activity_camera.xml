<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".CameraActivity">

    <FrameLayout
        android:id="@+id/frameLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/rectangle_3"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        >

        <ImageButton
            android:id="@+id/homeBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/home"
            android:contentDescription="홈"
            android:background="@android:color/transparent"
            android:layout_gravity="left" />

        <TextView
            android:id="@+id/codinavi"
            android:layout_width="wrap_content"
            android:layout_height="53dp"
            android:fontFamily="@font/bakbakone_regular"
            android:gravity="center"
            android:importantForAccessibility="no"
            android:text="CODINAVI"
            android:textColor="#2D0F51"
            android:textSize="35sp"
            android:layout_gravity="center" />

        <ImageButton
            android:id="@+id/profileBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/profile"
            android:contentDescription="마이페이지"
            android:background="@android:color/transparent"
            android:layout_gravity="right" />

    </FrameLayout>

    <androidx.camera.view.PreviewView
        android:id="@+id/previewView"
        android:layout_width="340dp"
        android:layout_height="470dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.35">
    </androidx.camera.view.PreviewView>

    <TextView
        android:id="@+id/textTv"
        android:layout_width="340dp"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:gravity="center"
        android:text="맑고 시원한 하늘색 셔츠"
        android:textColor="@color/black"
        android:textSize="22dp"
        android:fontFamily="@font/soyo_maple_regular"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@+id/previewView"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />

    <android.widget.Button
        android:id="@+id/codiBtn"
        android:layout_width="170dp"
        android:layout_height="100dp"
        android:text="코디 추천"
        android:textColor="@color/white"
        android:fontFamily="@font/soyo_maple_regular"
        android:textStyle="bold"
        android:textSize="35dp"
        android:background="@drawable/mainbtn"
        app:layout_constraintTop_toTopOf="@+id/textTv"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.55"
        app:layout_constraintRight_toLeftOf="@+id/vertical_centerline"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="0.5" />

    <android.widget.Button
        android:id="@+id/colorBtn"
        android:layout_width="170dp"
        android:layout_height="100dp"
        android:text="색상 추천"
        android:textColor="@color/white"
        android:fontFamily="@font/soyo_maple_regular"
        android:textStyle="bold"
        android:textSize="35dp"
        android:background="@drawable/mainbtn"
        app:layout_constraintTop_toTopOf="@+id/textTv"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.55"
        app:layout_constraintLeft_toRightOf="@+id/vertical_centerline"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.5" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/vertical_centerline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent=".50" />
</androidx.constraintlayout.widget.ConstraintLayout>