<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".Guide.IntroduceCameraBtn">

    <FrameLayout
        android:id="@+id/frameLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="#2D0F51"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" >

        <TextView
            android:id="@+id/codinavi"
            android:layout_width="wrap_content"
            android:layout_height="53dp"
            android:fontFamily="@font/bakbakone_regular"
            android:importantForAccessibility="no"
            android:layout_gravity="center"
            android:text="CODINAVI"
            android:textColor="#FFFFFF"
            android:textSize="35dp" />

        <ImageButton
            android:id="@+id/back_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginRight="170dp"
            android:background="@drawable/back_btn"
            android:contentDescription="뒤로가기" />

    </FrameLayout>

    <View
        android:id="@+id/introduceCameraback"
        android:layout_width="330dp"
        android:layout_height="530dp"
        android:background="@drawable/rectangle_1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/frameLayout"
        app:layout_constraintBottom_toTopOf="@+id/menuBottomNav" />

    <TextView
        android:id="@+id/introduceCameraTV1"
        android:layout_width="291dp"
        android:layout_height="wrap_content"
        android:text="사용자가 선택한 옷을 카메라로 촬영하면 해당 옷의 정보와 어울리는 옷차림을 추천합니다.\n해당 화면에는 코디 추천, 색상 추천, 상황별 코디 판별 버튼이 있습니다."
        android:fontFamily="@font/soyo_maple_regular"
        android:textColor="@color/black"
        android:lineSpacingExtra="10dp"
        android:textSize="17dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/introduceCameraback"
        app:layout_constraintBottom_toTopOf="@+id/introduceCameraTV2"/>

    <TextView
        android:id="@+id/introduceCameraTV2"
        android:layout_width="291dp"
        android:layout_height="wrap_content"
        android:text="코디 추천 버튼을 누르면 인식된 옷과 어울리는 조합의 옷을 추천합니다."
        android:fontFamily="@font/soyo_maple_regular"
        android:textColor="@color/black"
        android:lineSpacingExtra="10dp"
        android:textSize="17dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/introduceCameraTV1"
        app:layout_constraintBottom_toTopOf="@+id/introduceCameraTV3"/>

    <TextView
        android:id="@+id/introduceCameraTV3"
        android:layout_width="291dp"
        android:layout_height="wrap_content"
        android:text="색상 추천 버튼을 누르면  인식된 옷의 색상과 어울리는 색상을 추천합니다."
        android:fontFamily="@font/soyo_maple_regular"
        android:textColor="@color/black"
        android:lineSpacingExtra="10dp"
        android:textSize="17dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/introduceCameraTV2"
        app:layout_constraintBottom_toTopOf="@+id/introduceCameraTV4"/>

    <TextView
        android:id="@+id/introduceCameraTV4"
        android:layout_width="291dp"
        android:layout_height="wrap_content"
        android:text="상황별 코디 판별 버튼을 누르면 원하는 상황의 키워드를 선택할 수 있습니다. 인식된 옷이 선택한 상황에서의 적절한 옷차림인지 판별해주며, 선택한 상황의 정형화된 옷차림을 알려줍니다."
        android:fontFamily="@font/soyo_maple_regular"
        android:textColor="@color/black"
        android:lineSpacingExtra="10dp"
        android:textSize="17dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/introduceCameraTV3"
        app:layout_constraintBottom_toBottomOf="@+id/introduceCameraback"/>

    <TextView
        android:id="@+id/CameraTVBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/soyo_maple_regular"
        android:gravity="center"
        android:layout_marginRight="20dp"
        android:text="촬영하러가기"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:textStyle="bold"
        android:clickable="true"
        app:layout_constraintBottom_toBottomOf="@+id/introduceCameraback"
        app:layout_constraintTop_toBottomOf="@+id/introduceCameraTV4"
        app:layout_constraintEnd_toEndOf="@+id/introduceCameraback"
        android:contentDescription="촬영하러가기, 버튼" />

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/menuBottomNav"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rectangle_3"
        app:itemActiveIndicatorStyle="@android:color/transparent"
        app:itemIconSize="90dp"
        app:itemIconTint="@color/white"
        app:labelVisibilityMode="unlabeled"
        app:layout_constraintBottom_toBottomOf="parent"
        app:menu="@menu/menu_bottom" />

</androidx.constraintlayout.widget.ConstraintLayout>